[core]
	autocrlf = input
	pager = less -FXR

[init]
	defaultBranch = main
[push]
	autoSetupRemote = true
[pull]
	rebase = true

[diff]
        tool = difftastic

[difftool]
        prompt = false

[difftool "difftastic"]
        cmd = difft "$LOCAL" "$REMOTE"

[pager]
        difftool = true
